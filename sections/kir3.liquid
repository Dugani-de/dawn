    border-color: #d3d8d6;
    border-style: dotted;
    background: #f2f2f2;
  }
  .st_img-text-image-usp-wrapper {
    display: flex;
    flex-direction: column;
    gap: 10px;
  }
  .st_img-text-image-usp-item {
    display: flex;
    gap: 10px;
    align-items: center;
  }

  .st_img-text-image-usp-item-image {
    display: flex;
    justify-content: center;
    align-items: center;
    width: 20px;
    height: 20px;
  }
  .st_img-text-image-usp-item-image img {
  }
  .st_img-text-image-usp-item-text {
    font-size: 16px !important;
  }

  @media only screen and (max-width: 1024px) {
    .st_img-text-image {
      width: 100%;
    }
    .st_img-text-text {
      width: 100%;
    }
    .st_img-text-wrapper {
      flex-direction: column-reverse;
      gap: 60px;
    }
    .st_img-text-text {
      padding: 0 20px;
    }
    .st_img-text-image-floating {
      left: 5%;
      bottom: -40px;
      width: 120px;
      height: 120px;
    }
    .st_img-text-image-usp-item-text {
      font-size: 14px !important;
    }
  }
</style>

