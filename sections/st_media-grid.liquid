<style>
  /*-_- -_- -_- Desktop -_- -_- -_- */
  .st_Gallery {
    --Padding: 0px;
    --gap: 20px;
    width: 100%;
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
    align-content: flex-start;
    justify-content: flex-start;
    gap: var(--gap);
    padding-inline: 10px;
  }
  .st_Gallery-Box {
    --Boxes: 2;
    position: relative;
    width: calc((100% - (var(--gap) * (var(--Boxes) - 1))) / var(--Boxes));
    aspect-ratio: 1.555;
    border-radius: 29px;
    display: flex;
    flex-direction: column;
    justify-content: flex-end;
    align-items: flex-start;
    gap: 9px;
    padding: 51px 42px;
    overflow: hidden;
  }
  [data-st_Gallery-Shadow='0'] {
    --Shadow: 0;
  }
  [data-st_Gallery-Shadow='0.1'] {
    --Shadow: 0.1;
  }
  [data-st_Gallery-Shadow='0.2'] {
    --Shadow: 0.2;
  }
  [data-st_Gallery-Shadow='0.3'] {
    --Shadow: 0.3;
  }
  [data-st_Gallery-Shadow='0.4'] {
    --Shadow: 0.4;
  }
  [data-st_Gallery-Shadow='0.5'] {
    --Shadow: 0.5;
  }
  [data-st_Gallery-Shadow='0.6'] {
    --Shadow: 0.6;
  }
  [data-st_Gallery-Shadow='0.7'] {
    --Shadow: 0.7;
  }
  [data-st_Gallery-Shadow='0.8'] {
    --Shadow: 0.8;
  }
  [data-st_Gallery-Shadow='0.9'] {
    --Shadow: 0.9;
  }
  [data-st_Gallery-Shadow='1'] {
    --Shadow: 1;
  }
  .st_Gallery-Box:nth-child(5n + 1) {
    --Boxes: 2;
    aspect-ratio: 1.555;
  }
  .st_Gallery-Box:nth-child(5n + 2) {
    --Boxes: 2;
    aspect-ratio: 1.555;
  }
  .st_Gallery-Box:nth-child(5n + 3) {
    --Boxes: 3;
    aspect-ratio: 1.022;
  }
  .st_Gallery-Box:nth-child(5n + 4) {
    --Boxes: 3;
    aspect-ratio: 1.022;
  }
  .st_Gallery-Box:nth-child(5n + 5) {
    --Boxes: 3;
    aspect-ratio: 1.022;
  }
  .st_Gallery-Image {
    position: absolute;
    transform: translate(-50%, -50%);
    width: 100%;
    height: 100%;
    left: 50%;
    top: 50%;
    border-radius: inherit;
    object-fit: cover;
    transition: all 1s ease-in-out 0s;
  }
  .st_Gallery-Box:hover .st_Gallery-Image {
    transform: translate(-50%, -50%) scale(1.1);
  }
  .st_Gallery-Shadow {
    position: absolute;
    transform: translate(-50%, -50%);
    width: 100%;
    height: 100%;
    left: 50%;
    top: 50%;
    border-radius: 29px;
    background: linear-gradient(180deg, rgba(0, 0, 0, 0) 47.44%, hsl(0, 0%, 0%) 100%);
    opacity: 0;
    opacity: var(--Shadow);
  }
  .st_Gallery-Title {
    position: relative;
    color: hsl(0, 0%, 100%);
    font-family: Poppins;
    font-weight: 600;
    font-size: 39px;
    line-height: 100%;
  }
  .st_Gallery-Text {
    position: relative;
    color: hsl(0, 0%, 100%);
    font-family: Poppins;
    font-weight: 400;
    font-size: 20px;
    line-height: 100%;
  }
  .st_Gallery-Btn {
    position: relative;
    border-radius: 10px;
    display: flex;
    justify-content: center;
    align-items: center;
    padding: 10px 20px;
    background: hsl(0, 0%, 100%);
    color: hsl(0, 0%, 0%);
    font-family: Poppins;
    font-weight: 600;
    font-size: 16px;
  }
  .st_Btn {
    cursor: pointer;
  }
  .st_Btn:hover {
    scale: 1.1;
  }
  .st_Btn:active {
    scale: 0.9;
    opacity: 0.3;
    transition: none;
  }

  /*-_- -_- -_- Labtop -_- -_- -_-*/
  @media (max-width: 1024px) {
    .st_Gallery {
      --gap: 20px;
      padding-block: 24px;
    }
    .st_Gallery-Box:nth-child(5n + 1) {
      --Boxes: 2;
      aspect-ratio: 1.555;
    }
    .st_Gallery-Box:nth-child(5n + 2) {
      --Boxes: 2;
      aspect-ratio: 1.555;
    }
    .st_Gallery-Box:nth-child(5n + 3) {
      --Boxes: 3;
      aspect-ratio: 1.022;
    }
    .st_Gallery-Box:nth-child(5n + 4) {
      --Boxes: 3;
      aspect-ratio: 1.022;
    }
    .st_Gallery-Box:nth-child(5n + 5) {
      --Boxes: 3;
      aspect-ratio: 1.022;
    }
    .st_Gallery-Box {
      border-radius: 29px;
      gap: 8px;
      padding: 27px 23px;
    }
    .st_Gallery-Title {
      font-size: 25px;
    }
    .st_Gallery-Text {
      font-size: 12px;
    }
    .st_Gallery-Btn {
      font-size: 11px;
    }
  }

  /*-_- -_- -_- Tablet -_- -_- -_-*/
  @media (max-width: 768px) {
    .st_Gallery {
      --gap: 20px;
      padding-block: 24px;
    }
    .st_Gallery-Box:nth-child(5n + 1) {
      --Boxes: 1;
      aspect-ratio: 1.555;
    }
    .st_Gallery-Box:nth-child(5n + 2) {
      --Boxes: 2;
      aspect-ratio: 1.022;
    }
    .st_Gallery-Box:nth-child(5n + 3) {
      --Boxes: 2;
      aspect-ratio: 1.022;
    }
    .st_Gallery-Box:nth-child(5n + 4) {
      --Boxes: 2;
      aspect-ratio: 1.022;
    }
    .st_Gallery-Box:nth-child(5n + 5) {
      --Boxes: 2;
      aspect-ratio: 1.022;
    }
    .st_Gallery-Box {
      border-radius: 29px;
      gap: 8px;
      padding: 27px 23px;
    }
    .st_Gallery-Title {
      font-size: 25px;
    }
    .st_Gallery-Text {
      font-size: 12px;
    }
    .st_Gallery-Btn {
      font-size: 11px;
    }
  }

  /*-_- -_- -_- Mobile -_- -_- -_-*/
  @media (max-width: 480px) {
    .st_Gallery {
      --gap: 20px;
      padding-block: 24px;
    }
    .st_Gallery-Box:nth-child(5n + 1),
    .st_Gallery-Box:nth-child(5n + 2),
    .st_Gallery-Box:nth-child(5n + 3),
    .st_Gallery-Box:nth-child(5n + 4),
    .st_Gallery-Box:nth-child(5n + 5) {
      --Boxes: 1;
      aspect-ratio: 1.555;
    }
    .st_Gallery-Box {
      border-radius: 29px;
      gap: 8px;
      padding: 27px 23px;
    }
    .st_Gallery-Title {
      font-size: 25px;
    }
    .st_Gallery-Text {
      font-size: 12px;
    }
    .st_Gallery-Btn {
      font-size: 11px;
    }
  }
</style>

