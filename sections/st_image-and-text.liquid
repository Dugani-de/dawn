<style>
  .st_img-text-wrapper {
    margin: 0px auto;
    max-width: 140rem;
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 200px;
  }

  .st_img-text-text {
    width: 40%;
    display: flex;
    flex-direction: column;
    gap: 20px;
  }

  .st_img-text-text-title h2 {
    font-family: 'Poppins', sans-serif;
    font-weight: 600;
    font-size: 30px;
  }

  .st_img-text-text-title h3 {
    font-family: 'Poppins', sans-serif;
    font-weight: 300;
    font-size: 20px;
  }

  .st_img-text-image {
    width: 50%;
    position: relative;
    height: fit-content;
  }

  .st_img-text-image-floating {
    position: absolute;
    left: -70px;
    bottom: 10%;
    width: 140px;
    height: 140px;
    border-radius: 50%;
    border: 3px solid #fff;
  }

  .st_img-text-image-usp-box {
    padding: 20px;
    border-width: 2px;
    border-color: #d3d8d6;
    border-style: dotted;
    background: #f2f2f2;
  }
  .st_img-text-image-usp-wrapper {
    display: flex;
    flex-direction: column;
    gap: 10px;
  }
  .st_img-text-image-usp-item {
    display: flex;
    gap: 10px;
    align-items: center;
  }

  .st_img-text-image-usp-item-image {
    display: flex;
    justify-content: center;
    align-items: center;
    width: 20px;
    height: 20px;
  }
  .st_img-text-image-usp-item-image img {
  }
  .st_img-text-image-usp-item-text {
    font-size: 16px !important;
  }

  @media only screen and (max-width: 1024px) {
    .st_img-text-image {
      width: 100%;
    }
    .st_img-text-text {
      width: 100%;
    }
    .st_img-text-wrapper {
      flex-direction: column-reverse;
      gap: 60px;
    }
    .st_img-text-text {
      padding: 0 20px;
    }
    .st_img-text-image-floating {
      left: 5%;
      bottom: -40px;
      width: 120px;
      height: 120px;
    }
    .st_img-text-image-usp-item-text {
      font-size: 14px !important;
    }
  }
</style>

